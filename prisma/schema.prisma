generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   Int    @id @default(autoincrement())
  name String @unique
  Room Room?
}

model Problem {
  id             Int    @id @default(autoincrement())
  originLink     String
  title          String
  condition      String
  contents       String
  evaluateInput  String
  evaluateOutput String
  grade          Int
  viewCount      Int
  Room           Room?
}

model Room {
  id         Int     @id @default(autoincrement())
  manager    String  @unique
  title      String
  maxAttend  Int
  generateAt Int
  expireAt   Int
  difficulty Int
  roomLink   String
  problem    Problem @relation(fields: [problemId], references: [id])
  problemId  Int     @unique
  owner      User    @relation(fields: [ownerId], references: [id])
  ownerId    Int     @unique
}
