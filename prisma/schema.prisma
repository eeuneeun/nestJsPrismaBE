generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  name  String  @unique 
}

model Algorithm {
  id        Int      @default(autoincrement()) @id
  originLink String
  title     String
  condition String
  contents   String
  evaluateInput String
  evaluateOutput String
  grade Int
  viewCount Int
  rooms Room[]
}


model Room {
  id    Int     @default(autoincrement()) @id
  manager  String  @unique
  title String
  maxAttend Int
  generateAt Int
  expireAt Int
  difficulty Int
  roomLink String
  algorithmId Algorithm @relation(fields: [roomId], references: [id])
  roomId Int
}